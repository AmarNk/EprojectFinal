@model Eproject1.Models.UserClass

@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<!-- inner banner -->
<section class="inner-banner py-5">
    <div class="w3l-breadcrumb py-lg-5">
        <div class="container pt-4 pb-sm-4">
            <h4 class="inner-text-title pt-5">Register</h4>
            <ul class="breadcrumbs-custom-path">
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="active"><i class="fas fa-angle-right"></i>Register</li>
            </ul>
        </div>
    </div>
</section>
<!-- //inner banner -->

<!-- registration block -->
<section class="w3l-contact py-5" id="contact">
    <div class="container py-md-5 py-4">
        <div class="title-main text-center mx-auto mb-md-5 mb-4" style="max-width:500px;">
            <p class="text-uppercase">Join Us</p>
            <h3 class="title-style">Register</h3>
        </div>
        <div class="row contact-block">
            <div class="col-md-7 contact-right">
                @using (Html.BeginForm("Signup", "NewReg", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="input-grids">
                        <div class="row">
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.Uname)
                                @Html.EditorFor(model => model.Uname, new { htmlAttributes = new { @class = "contact-input" } })
                                @Html.ValidationMessageFor(model => model.Uname, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.Uemail)
                                @Html.EditorFor(model => model.Uemail, new { htmlAttributes = new { @class = "contact-input" } })
                                @Html.ValidationMessageFor(model => model.Uemail, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.Upwd)
                                @Html.EditorFor(model => model.Upwd, new { htmlAttributes = new { @class = "contact-input" } })
                                @Html.ValidationMessageFor(model => model.Upwd, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.Repwd)
                                @Html.EditorFor(model => model.Repwd, new { htmlAttributes = new { @class = "contact-input" } })
                                @Html.ValidationMessageFor(model => model.Repwd, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.Department)
                                @Html.DropDownListFor(model => model.Department, new SelectList(Enum.GetValues(typeof(Eproject1.Models.Department))), "Select Department", new { @class = "contact-input" })
                                @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                @Html.LabelFor(model => model.Uimg)
                                <input type="file" name="file" class="contact-input" />
                                @Html.ValidationMessageFor(model => model.Uimg, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-input mt-4">
                        <button class="btn btn-style btn-style-3">Register</button>
                    </div>

                    <li class="nav-item">
                        @Html.ActionLink("Already registered login here!", "Login", "NewReg", null, new { @class = "nav-link" })
                    </li>
                }



                @Html.ViewData["Message"]
            </div>
            <div class="col-md-5 ps-lg-5 mt-md-0 mt-5">
                <div class="contact-left">
                    <div class="cont-details">
                        <div class="d-flex contact-grid">
                            <div class="cont-left text-center me-3">
                                <i class="fas fa-building"></i>
                            </div>
                            <div class="cont-right">
                                <h6>Company Address</h6>
                                <p>Edu School, 10001, 5th Avenue, 12202 street, London.</p>
                            </div>
                        </div>
                        <div class="d-flex contact-grid mt-4 pt-lg-2">
                            <div class="cont-left text-center me-3">
                                <i class="fas fa-phone-alt"></i>
                            </div>
                            <div class="cont-right">
                                <h6>Call Us</h6>
                                <p><a href="tel:+1(21) 234 4567">+1(21) 112 7368</a></p>
                            </div>
                        </div>
                        <div class="d-flex contact-grid mt-4 pt-lg-2">
                            <div class="cont-left text-center me-3">
                                <i class="fas fa-envelope-open-text"></i>
                            </div>
                            <div class="cont-right">
                                <h6>Email Us</h6>
                                <p><a href="mailto:example@mail.com" class="mail">example@mail.com</a></p>
                            </div>
                        </div>
                        <div class="d-flex contact-grid mt-4 pt-lg-2">
                            <div class="cont-left text-center me-3">
                                <i class="fas fa-headphones-alt"></i>
                            </div>
                            <div class="cont-right">
                                <h6>Customer Support</h6>
                                <p><a href="mailto:info@support.com" class="mail">info@support.com</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- //registration block -->
