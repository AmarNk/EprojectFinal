@model List<Eproject1.Models.tbl_Student>

@{
    ViewBag.Title = "StudentList";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<style>
    /* Internal CSS for table and font adjustments */
    .table {
        font-size: 14px; /* Adjust font size as needed */
        font-weight: bolder;
    }

    .table-responsive {
        overflow-x: auto; /* Allow horizontal scrolling */
    }

    .delete-icon {
        color: red; /* Color for delete icon */
    }

    .edit-icon {
        color: blue; /* Color for edit icon */
    }
</style>

<h1>List of Complaints</h1>

<div>
    @Html.ActionLink("Back to add query/complaints", "Student", "Student", null, new { @class = "nav-link" })
</div>

<div class="table-responsive">
    <!-- Use table-responsive to enable horizontal scrolling on smaller screens -->
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Complaint ID</th>
                <th scope="col">Student Name</th>
                <th scope="col">Father's Name</th>
                <th scope="col">Email Address</th>
                <th scope="col">Mobile</th>
                <th scope="col">Department</th>
                <th scope="col">Semester</th>
                <th scope="col">Program</th>
                <th scope="col">Query/Complaint for Department</th>
                <th scope="col">Details of Query/Complaint</th>
                <th scope="col">Actions</th> <!-- Corrected from 'Action' to 'Actions' -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Sid</td>
                    <td>@item.Sname</td>
                    <td>@item.Fname</td>
                    <td>@item.Email</td>
                    <td>@item.Mobile</td>
                    <td>@item.Department</td>
                    <td>@item.Semester</td>
                    <td>@item.Program</td>
                    <td>@item.ComplaintAgainst</td>
                    <td>@item.Description</td>
                    <td scope="col">
                        @Html.ActionLink("Delete", "Delete", new { stid = item.Sid }, new { @class = "delete-icon" })
                        <a href="@Url.Action("Delete", new { stid = item.Sid })" class="delete-icon"><i class="fa fa-trash"></i>
                        </a>
                        <br />

                        @Html.ActionLink("Edit", "Edit", new { stid = item.Sid }, new { @class = "edit-icon" })
                        <a href="@Url.Action("Edit", new { stid = item.Sid })" class="edit-icon"><i class="fa fa-edit"></i>
                        </a>
                    </td>

                    @*<td>

                    </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Include Font Awesome (if not already included in the layout) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
